{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "cli-relay": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "pullSecret": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["pullSecret"]
        },
        "auth": {
          "type": "object",
          "properties": {
            "roleFile": {
              "type": "string",
              "minLength": 1
            },
            "authSecret": {
              "type": "string",
              "minLength": 1
            },
            "dbSecret": {
              "type": "string",
              "minLength": 1
            },
            "redisSecret": {
              "type": "string",
              "minLength": 1
            },
            "cacheSecret": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["roleFile", "authSecret", "dbSecret", "redisSecret", "cacheSecret"]
        },
        "service": {
          "type": "object",
          "properties": {
            "environment": {
              "type": "string",
              "enum": ["production", "staging", "development"]
            }
          },
          "required": ["environment"]
        }
      },
      "required": ["image", "auth", "service"]
    },
    "time-server": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "pullSecret": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["pullSecret"]
        },
        "auth": {
          "type": "object",
          "properties": {
            "redisSecret": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["redisSecret"]
        }
      },
      "required": ["image", "auth"]
    }
  },
  "required": ["cli-relay", "time-server"]
}

{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string"
        },
        "pullSecret": {
          "type": "string",
          "minLength": 1
        },
        "tag": {
          "type": "string"
        }
      },
      "required": ["pullSecret"]
    },
    "job": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "script": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["name", "script"]
    },
    "auth": {
      "type": "object",
      "properties": {
        "authSecret": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["authSecret"]
    }
  },
  "required": ["image", "auth"]
}

{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string"
        },
        "pullSecret": {
          "type": "string",
          "minLength": 1
        },
        "tag": {
          "type": "string"
        }
      },
      "required": ["pullSecret"]
    },
    "auth": {
      "type": "object",
      "properties": {
        "authSecret": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["authSecret"]
    },
    "job": {
      "type": "object",
      "properties": {
        "script": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["script"]
    },
    "env": {
      "type": "object"
    }
  },
  "required": ["image", "auth", "job"]
}

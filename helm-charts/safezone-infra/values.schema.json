{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "cli-relay": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "pullSecret": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["pullSecret"]
        },
        "auth": {
          "type": "object",
          "properties": {
            "roleFile": {
              "type": "string",
              "minLength": 1
            },
            "authSecret": {
              "type": "string",
              "minLength": 1
            },
            "dbSecret": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["roleFile", "authSecret", "dbSecret"]
        }
      },
      "required": ["image", "auth"]
    },
    "time-server": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "pullSecret": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["pullSecret"]
        },
        "auth": {
          "type": "object",
          "properties": {
            "redisSecret": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["redisSecret"]
        }
      },
      "required": ["image", "auth"]
    }
  },
  "required": ["cli-relay"]
}
